<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- This is the line -->
    <item android:top="-4dp" android:right="-4dp" android:left="1dp" android:bottom="-4dp">
        <shape>
            <stroke android:width="4dp" android:color="#CFCFCF" />
        </shape>
    </item>

    <item android:top="-1dp" android:right="-1dp" android:left="-1dp" android:bottom="0dp">
        <shape>
            <stroke android:width="1dp" android:color="#F8F8FA" />
        </shape>
    </item>

    <item>

        <shape>
            <!-- Specify the margins that all content inside the drawable must adhere to -->
            <padding
                android:left="30dp" />
        </shape>
    </item>

</layer-list>