<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.aroundme.com.nearbyapp.ConfigFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#e9e9e9">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Units &amp; Measurements"
                    android:id="@+id/textView10"
                    android:theme="@style/AppTheme.SettingsHead"
                    android:textAllCaps="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/rl_distance_km">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kilometre"
                        android:id="@+id/textView11"
                        android:textColor="#000"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:id="@+id/iv_distance_km"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/rl_distance_mi">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miles"
                        android:id="@+id/textView12"
                        android:textColor="#000"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="right"
                        android:id="@+id/iv_distance_mi"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:id="@+id/rl_temperature_c">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celsius"
                        android:id="@+id/textView18"

                        android:textColor="#000"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_temperature_c"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/rl_temperature_f">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farenheit"
                        android:id="@+id/textView19"

                        android:textColor="#000"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_temperature_f"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff" >

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_notifications"
                        android:id="@+id/enable_notifications"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:theme="@style/MySwitch"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Nearby"
                    android:id="@+id/textView13"
                    android:theme="@style/AppTheme.SettingsHead"
                    android:textAllCaps="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/lv_terms">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms &amp; Conditions"
                        android:id="@+id/textView14"

                        android:textColor="#000"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/lv_privacy">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:id="@+id/textView15"

                        android:textColor="#000"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#fff"
                    android:id="@+id/lv_about_us">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Us"
                        android:id="@+id/textView16"

                        android:textColor="#000"
                        android:textSize="16sp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
