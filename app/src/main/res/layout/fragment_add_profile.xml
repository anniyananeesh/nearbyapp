<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.aroundme.com.nearbyapp.AddProfileFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build your profile."
            android:id="@+id/text_head"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/AppTheme.FormHead"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:id="@+id/textView2"
            android:layout_below="@+id/text_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/AppTheme.FormLabel"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_business_name"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/input"
            android:theme="@style/AppTheme.EditTextViewDefault"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/textView3"
            android:layout_below="@+id/et_business_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/AppTheme.FormLabel"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/spinner"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_round"
            android:padding="0dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:id="@+id/textView4"
            android:layout_below="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/AppTheme.FormLabel"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/input"
            android:theme="@style/AppTheme.EditTextViewDefault"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:id="@+id/textView5"
            android:layout_below="@+id/et_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/AppTheme.FormLabel"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_phone"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/input"
            android:theme="@style/AppTheme.EditTextViewDefault"
            android:layout_marginBottom="15dp"
            android:digits="0123456789+"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone"
            android:layout_alignLeft="@+id/et_phone"
            android:layout_alignStart="@+id/et_phone"
            android:id="@+id/linearLayout"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are in office now?"
                android:id="@+id/textView6"
                android:layout_weight="2"
                android:textSize="14dp"
                android:textColor="#000"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Location"
                android:id="@+id/btn_share_location"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:textColor="#28b3e7"
                android:textSize="14dp"
                android:onClick="onClick" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="By clicking the submit button, you are agreeing to our terms and conditions"
            android:id="@+id/textView7"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:lineSpacingExtra="5dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:id="@+id/btn_send_add_request"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="38dp"
            android:onClick="onClick"
            android:theme="@style/AppTheme.ButtonPrimary"
            android:background="#28b3e7"/>

    </RelativeLayout>

    </ScrollView>
</LinearLayout>
