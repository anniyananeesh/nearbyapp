<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.aroundme.com.nearbyapp.OfferDetailsFragment"
    android:nestedScrollingEnabled="false"
    android:background="#ffffff">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_progress1"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:elevation="10dp"
        android:translationZ="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lv_view_offer_details"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/iv_offer_image"
                android:background="#ddd"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginTop="0dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:padding="12dp"
                android:id="@+id/tv_offer_title"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_offer_description"
                    android:text=""
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="#fff"
                    />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/lv_footer_button"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="#e9e9e9">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:background="#e9e9e9"
            android:drawableLeft="@drawable/ic_phone"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:id="@+id/btn_offer_call"
            android:paddingLeft="15dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:background="#e9e9e9"
            android:drawableLeft="@drawable/ic_navigate"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:id="@+id/btn_navigate"
            android:paddingLeft="15dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Offer"
            android:background="#e9e9e9"
            android:drawableLeft="@drawable/ic_navigate"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:id="@+id/btn_get_offer"
            android:paddingLeft="15dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
